<!doctype html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/public/css/output.css" rel="stylesheet">
</head>

<body>

  <%- include("../components/header.ejs") %>

  

  <button id="toggleFiltresButton" class="lg:hidden block mx-auto bg-blue-900 text-white px-4 py-2 rounded-md m-4">Afficher les filtres</button>

  <main class="lg:mx-1/5 mt-10 flex justify-center">
    
    <!-- Filtres de recherches -->
    <section id="filtresSection" class="hidden lg:w-1/5 lg:block border-solid border-gray-200 border-2 rounded-md bg-gray-100">
      <h2 class="p-4 text-center font-semibold text-xl">Recherche et Filtres</h2>
      <form action="#" method="get" id="filtres" class="py-4 max-w-prose flex flex-col justify-start items-center">
        <input type="search" name="Search" placeholder="Recherche" id="search-bar"
        class="block py-2 pl-3 mb-4 leading-normal text-gray-900 border-0 rounded-md h-fit ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset">

        <label for="courses">Code du cours:</label>
        <select name="codeCours" id="codeCours" form="filtres" class="block py-2 pl-3 mb-4 mt-1 text-center ring-1 ring-gray-300 rounded-md">
          <% for(var i=0; i < listOfCourses.length; i++) { %>
            <option value="<%= listOfCourses[i] %>"><%= listOfCourses[i] %></option>          
          <% } %>
        </select>

        <label for="price">Prix maximum:</label>
        <!-- l'attribut step permet les nombres à virgule -->

        <input type="number" id="price" name="price" min="0" step="0.01" 
        class="py-2 pl-3 mb-4 mt-1 block text-center ring-1 ring-gray-300 rounded-md">

        <label for="rating">Note minimum du vendeur:</label>
        <input type="number" id="rating" name="rating" min="1" max="5" 
        class="py-2 pl-3 mb-4 mt-1 block text-center ring-1 ring-gray-300 rounded-md">

        <button type="submit" class="py-2 px-4 block font-semibold text-white rounded-md bg-blue-900 hover:bg-blue-700 transition-all">Appliquer</button>

      </form>
    </section>
    
    <!-- Annonces -->
    <section id="announcesSection" class="w-full lg:w-3/5">
      <h2 class="p-4 text-center font-semibold text-4xl">Annonces</h2>
      
      <div class="flex flex-col items-center justify-center">
        <% for(var i=0; i < annonces.length; i++) { %>
          <div class="w-4/5 p-4 my-4 flex flex-row rounded-md bg-gray-100 border-black shadow-md">
            <img src="#" class="w-32 h-32 md:w-40 md:h-40 object-cover">
            <div class="w-full px-4 flex flex-col">
              
              <div class="flex flex-row justify-between pb-2">
                <!-- Replacer href avec id de l'annonce pour la page -->
                <a href="#" class="text-2xl font-semibold"><%= annonces[i].objectName %></a>
                <span class="text-2xl font-bold"><%= annonces[i].price %>€</span>
              </div>
              <span><%= annonces[i].seller %> <%= annonces[i].sellerRating %>/5</span>
              <span>état : <%= annonces[i].state %></span>
            </div>

          </div>
        <% } %>
    </div>

    </section>
  </main>
  
  
  <%- include("../components/loginModal.ejs") %>
  <%- include("../components/registerModal.ejs") %>

</body>

<script src="/public/js/index.js"></script>

</html>
