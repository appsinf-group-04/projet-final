<header class="py-3 bg-blue-900">
  
  <div class="flex flex-row items-center justify-between w-4/5 mx-auto ">
    <div id="logo-name" class="flex items-center">
      <h1 class="ml-5 text-2xl font-bold text-white">Louvain Market</h1>
    </div>
    
    <nav class="flex justify-end w-1/2 text-white ">
      <a href="/" class="mx-4 font-semibold border-transparent border-b-2 hover:border-white transition duration-200 ease-in-out">Accueil</a>
      <% if (!loggedIn){ %>
        <button class="mx-4 font-semibold border-transparent border-b-2 hover:border-white transition duration-200 ease-in-out showLoginModal">S'identifier</button>
      <% } else { %>
        <form action="/logout" method="POST">
          <button type="submit" class="mx-4 font-semibold border-transparent border-b-2 hover:border-white transition duration-200 ease-in-out"><%= user.name %> (d√©connexion)</button>
        </form>
      <% } %>
    </nav>

  </div>
</header>