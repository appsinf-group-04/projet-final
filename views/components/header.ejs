<header class="py-3 bg-blue-900">
  <div class="flex flex-row items-center justify-between w-4/5 mx-auto ">
    <div id="logo-name" class="flex items-center">
      <h1 class="ml-5 text-2xl font-bold text-white">Louvain Market</h1>
    </div>
    
    <nav class="flex justify-end w-1/2 text-white ">
      <a href="/" class="mx-4 font-semibold transition duration-200 ease-in-out border-b-2 border-transparent hover:border-white">Accueil</a>
      <% if (!user){ %>
        <a href="/auth/login" class="mx-4 font-semibold transition duration-200 ease-in-out border-b-2 border-transparent hover:border-white">S'identifier</a>
      <% } else { %>
          <a href="/profile" class="mx-4 font-semibold transition duration-200 ease-in-out border-b-2 border-transparent hover:border-white"><%= user.name %></a>

          <% if(user.role == "admin") {  %>
            <a href="/dash" class="mx-4 font-semibold transition duration-200 ease-in-out border-b-2 border-transparent hover:border-white">Admin Space</a>
          <% } %>
      <% } %>
    </nav>
  </div>
</header>
