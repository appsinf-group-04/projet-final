<dialog id="interestedModal"
  class="p-4 bg-white rounded-lg shadow-[0_0_15px_0_rgba(0,0,0,0.1)] backdrop:backdrop-blur-sm backdrop:bg-transparent">

  <nav class="flex flex-row items-center justify-end">
    <!-- SVG d'une croix servant de bouton close -->
    <button id="closeInterestedModal" type="button"
      class="flex items-center justify-center w-8 h-8 text-sm text-gray-400 rounded-lg hover:bg-gray-200 hover:text-gray-900 ">
      <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
      </svg>
    </button>
  </nav>

  <section class="p-4">
    <h1 class="pb-2 mb-4 text-3xl font-bold text-center border-b">
      Contactez le vendeur
    </h1>
    <ul class="mb-4">
        <li><span class="font-semibold">courriel:</span> <%= post.refUser.email %></li>
        <li><span class="font-semibold">numéro:</span> <%= post.refUser.phone %></li>
    </ul>

    <form class="flex flex-col justify-center mb-4" method="post" action="/giveRank/<%= post.id %>" 
      onsubmit="return confirm('Attention, chaque note est enregistré, vous avez le droit à une note par annonce, si un abus est détecté, vous serez banni de la plateforme')">
      <label for="givenRank">attribuer une note?</label>
      <input type="number" name="givenRank" min="0" max="5" required
        class="w-full p-2 mt-1 mb-4 border rounded-md">
      <input type="submit" value="Attribuer"
        class="px-4 py-2 font-semibold text-white bg-blue-500 rounded-md hover:bg-blue-600">
    </form>
  </section>
</dialog>